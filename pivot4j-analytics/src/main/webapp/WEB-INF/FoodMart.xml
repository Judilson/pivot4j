<?xml version="1.0" encoding="ISO-8859-1"?>
<Schema name="FoodMart">

    <Cube name="Divida">
        <Table name="tb_analise_dividas_dim01"/>
        <Dimension name="Exercicio">
            <Hierarchy hasAll="true" allMemberName="Todos exercicios">
                <Level name="Exercicio" column="exer_nr_lancamento" uniqueMembers="true" type="Integer"/>
                <Level name="Tipo lançamento" column="latp_cd_lancamento" uniqueMembers="true" type="String"/>
                <Level name="Número lançamento" column="lanc_nr_lancamento" uniqueMembers="false" type="Numeric"/>
            </Hierarchy>
        </Dimension>
        <Dimension name="Situação">
            <Hierarchy hasAll="true" allMemberName="Todas situações">
                <Level name="Situação" column="situ_ds_situacao" uniqueMembers="true" type="String"/>
            </Hierarchy>
        </Dimension>
        <Dimension name="Bairro">
            <Hierarchy hasAll="true" allMemberName="Todos bairros">
                <Level name="Bairro" column="cada_ds_bairro" uniqueMembers="true" type="String"/>
            </Hierarchy>
        </Dimension>
        <Dimension name="Fase">
            <Hierarchy hasAll="true" allMemberName="Todas fases">
                <Level name="Fase" column="fase_ds_fase" uniqueMembers="true" type="String"/>
            </Hierarchy>
        </Dimension>
        <Measure name="Valor atualizado" column="lava_vl_atualizado" aggregator="sum" formatString="R$ ###,###,###,##0.00"/>
    </Cube>
    
</Schema>
